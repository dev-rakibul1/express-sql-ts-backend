generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}




model Player {
  id                  String      @id @default(uuid())
  name                String
  email               String      @unique
  goals               String?
  assist              String?
  password            String
  file                String?
  type                PlayerType
  active              String
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt

  @@map("players")
}

enum PlayerType {
  REGULAR
  IRREGULAR
}
